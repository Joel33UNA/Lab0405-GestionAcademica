<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:backgroundTint="#D0B9D5" android:background="#8A8A8A">
    <TextView
            android:text="Gestión Académica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="28sp" android:fontFamily="serif"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="98dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" android:layout_marginBottom="30dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextCedulaLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Cédula"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintBottom_toTopOf="@+id/textView3"
            android:layout_marginBottom="30dp"/>
    <TextView
            android:text="Cédula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:layout_marginEnd="267dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="101dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/editTextCedulaLogin"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextClaveLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Contraseña"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toTopOf="@+id/loginBtn"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextCedulaLogin"
            app:layout_constraintBottom_toTopOf="@+id/editTextClaveLogin" android:layout_marginEnd="237dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="102dp"/>
    <Button
            android:text="Iniciar Sesión"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63" android:layout_marginEnd="131dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="130dp" app:layout_constraintTop_toBottomOf="@+id/editTextClaveLogin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" android:layout_marginTop="50dp" android:id="@+id/loginBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>
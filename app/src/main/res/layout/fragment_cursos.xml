<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.CursosFragment">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="388dp"
            android:layout_height="554dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerCursos" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintTop_toBottomOf="@+id/searchCursos"/>
    <SearchView
            android:layout_width="407dp"
            android:layout_height="59dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="57dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" android:layout_marginEnd="2dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp" app:layout_constraintBottom_toTopOf="@+id/recyclerCursos"
            android:id="@+id/searchCursos"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listEstudiantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="12dp">
            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageEstudiante"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    app:srcCompat="@drawable/ic_person_black_24dp"/>
            <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/imageEstudiante"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/imageEstudiante">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nombreEstudiante"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/black"
                        android:text="Nombre"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cedulaEstudiante"
                        android:text="1"
                        android:textSize="18sp"/>
                <TextView
                        android:text="Carrera"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nombreCarrera"/>
            </LinearLayout>
            <TextView
                    android:text="Nacimiento:"
                    android:textStyle="bold"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fechaNacimientoText"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:layout_marginStart="15dp"
                    android:layout_toStartOf="@+id/fechaNacimiento"/>
            <TextView
                    android:id="@+id/fechaNacimiento"
                    android:text="1/1/2000"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="10dp"/>
            <TextView
                    android:text="TelÃ©fono:"
                    android:textStyle="bold"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/telefonoEstudianteText"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_toStartOf="@+id/telefonoEstudiante"/>
            <TextView
                    android:id="@+id/telefonoEstudiante"
                    android:text="88888888"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"/>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/correoEstudianteText"
                    android:text="Correo:"
                    android:textStyle="bold"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:layout_toStartOf="@id/correoEstudiante"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/correoEstudiante"
                    android:text="correo@email.com:"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="1dp"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>